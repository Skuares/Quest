<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/clouds">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/senderImageB"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/senderNameB"
                android:layout_toRightOf="@+id/senderImageB"
                android:text=""
                android:layout_alignTop="@+id/senderImageB"
                android:textSize="22sp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/requestDescriptionB"
                android:layout_toRightOf="@+id/senderNameB"
                android:text="Would like you to join him ?"
                android:layout_alignTop="@+id/senderNameB"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_below="@id/senderImageB"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/noButton"

                    android:textColor="#fff"
                    android:text="Sorry"
                    android:textSize="18sp"

                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@color/red"
                    android:padding="4dp"
                    android:layout_margin="8dp"

                    android:layout_height="wrap_content" />


                <Button
                    android:id="@+id/maybeButton"
                    android:textColor="#000"
                    android:text="Maybe"
                    android:textSize="18sp"
                    android:layout_margin="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:padding="4dp"
                    android:layout_height="wrap_content" />



                <Button
                    android:id="@+id/comingButton"
                    android:textColor="#fff"
                    android:text="Coming"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"

                    android:background="@color/green"
                    android:padding="4dp"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>