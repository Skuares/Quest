<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/cardRequestFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/clouds">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/senderImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                />

            <TextView
                android:id="@+id/senderName"
                android:layout_toRightOf="@+id/senderImage"
                android:text=""
                android:layout_alignTop="@+id/senderImage"
                android:textSize="22sp"
                android:textColor="@color/blue_grey"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/requestDescription"
                android:layout_toRightOf="@+id/senderName"
                android:text="Would like to be your friend ?"
                android:layout_alignTop="@+id/senderName"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/acceptRequest"
                android:src="@drawable/ic_action_accept"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/requestDescription"
                android:background="@color/green"
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"

                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/ignoreRequest"
                android:src="@drawable/ic_action_cancel"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@+id/acceptRequest"
                android:layout_below="@+id/requestDescription"
                android:background="@color/red"
                android:padding="4dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="20dp"

                android:layout_height="wrap_content" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>